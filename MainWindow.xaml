<Window x:Class="YFen_Browser_CSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YFen_Browser_CSharp"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="YFen Browser" Height="450" Width="800" Icon="/a0xKDxrFMMO7Ip0Sp2QorAGSJ6BvhevuhY4Stxb_UTDK7S90cgpUiKwBoUAiTrV73c0EhSYteqaCErRquvt9aovq.ico">

    <Window.Resources>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="Border.IsMouseOver" Value="True">
                </Trigger>
            </Style.Triggers>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="614*"/>
            <ColumnDefinition Width="93*"/>
        </Grid.ColumnDefinitions>
        <wv2:WebView2 Name="webView" Source="http://duckduckgo.com" Margin="10,43,10,10" Grid.ColumnSpan="3" NavigationCompleted="webView_NavigationCompleted"/>
        <Button x:Name="BackButton" Style="{StaticResource ButtonStyle}" Margin="10,8,1,0" BorderBrush="#00707070" Cursor="Hand" Click="BackButton_Click" Height="30" VerticalAlignment="Top" Visibility="Collapsed">
            <Button.Background>
                <ImageBrush ImageSource="/premium-icon-left-arrow-4941878.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <TextBox x:Name="SearchLine" Margin="6,8,5,0" Cursor="IBeam" Background="#FFEFEFEF" Grid.Column="1" Height="30" VerticalAlignment="Top" SelectionBrush="#FFABADB3"/>
        <Button x:Name="HomeButton" Style="{StaticResource ButtonStyle}" Margin="12,8,50,0" Cursor="Hand" Height="30" VerticalAlignment="Top" Grid.Column="2" Click="HomeButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="/free-icon-home-6659713.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="SearchButton" Style="{StaticResource ButtonStyle}" Margin="53,8,10,0" Height="30" VerticalAlignment="Top" Grid.Column="2" Click="SearchButton_Click" Cursor="Hand">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/premium-icon-right-arrow-4941935.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
